<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/recipe"
                android:text="@string/title_recipe"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="35sp"
                android:fontFamily="@font/prompt_medium"
                android:textColor="@color/colorAccent"/>

        <LinearLayout
                android:layout_height="250dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight=".6"
                    android:gravity="center">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/coffee_dose"
                        android:gravity="center|end"
                        android:textSize="25sp"
                        android:fontFamily="@font/prompt_medium"
                        android:textColor="@color/colorAccent"/><!--FF511D07-->

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/yield_extracted"
                        android:gravity="center|end"
                        android:textSize="25sp"
                        android:fontFamily="@font/prompt_medium"
                        android:textColor="@color/colorAccent"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/grind_settings"
                        android:gravity="center|end"
                        android:textSize="25sp"
                        android:fontFamily="@font/prompt_medium"
                        android:textColor="@color/colorAccent"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/total_time"
                        android:gravity="center|end"
                        android:textSize="25sp"
                        android:fontFamily="@font/prompt_medium"
                        android:textColor="@color/colorAccent"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/switch_advanced"
                        android:gravity="center|end"
                        android:textSize="25sp"
                        android:fontFamily="@font/prompt_medium"
                        android:textColor="@color/colorAccent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight=".4"
                    android:gravity="center">

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_grams"
                        android:id="@+id/grams_dose"
                        android:fontFamily="@font/prompt_medium"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_gravity="start"
                        android:textColor="@color/colorAccent"/>

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_grams"
                        android:id="@+id/grams_yield"
                        android:fontFamily="@font/prompt_medium"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_gravity="start"
                        android:textColor="@color/colorAccent"/>

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_set"
                        android:id="@+id/grind_setting"
                        android:fontFamily="@font/prompt_medium"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_gravity="start"
                        android:textColor="@color/colorAccent"/>

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_seconds"
                        android:id="@+id/total_time"
                        android:fontFamily="@font/prompt_medium"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_gravity="start"
                        android:textColor="@color/colorAccent"/>

                <Switch
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textOn="sensorial"
                        android:textOff="instrumental"
                        android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical">


            <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/graph_screen"
                    android:fontFamily="@font/prompt_medium"
                    android:text="@string/button_graphic"
                    android:textColor="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textAlignment="gravity"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/list_of_coffees"
                    android:fontFamily="@font/prompt_medium"
                    android:text="@string/button_list_of_coffees"
                    android:textColor="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textAlignment="gravity"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>