<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/receita"
            android:text="@string/recipe_title"
            android:textAlignment="center"
            android:textSize="35sp"
            android:fontFamily="@font/prompt_medium"/>

    <LinearLayout
            android:layout_height="400dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".7">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:text="Coffee dose:"
                    android:gravity="center|end"
                    android:textSize="25sp"
                    android:fontFamily="@font/prompt_medium"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:text="Yield extracted:"
                    android:gravity="center|end"
                    android:textSize="25sp"
                    android:fontFamily="@font/prompt_medium"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:text="Grind setting:"
                    android:gravity="center|end"
                    android:textSize="25sp"
                    android:fontFamily="@font/prompt_medium"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:text="Total time:"
                    android:gravity="center|end"
                    android:textSize="25sp"
                    android:fontFamily="@font/prompt_medium"/>

        </LinearLayout>

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".3">

            <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:hint="grams"
                    android:id="@+id/grams_dose"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:hint="grams"
                    android:id="@+id/grams_yield"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:hint="set"
                    android:id="@+id/grind_setting"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight=".25"
                    android:inputType="number"
                    android:hint="seconds"
                    android:id="@+id/total_time"
                    android:fontFamily="@font/prompt_medium"
                    android:textSize="20sp"
                    android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/graph_screen"
                android:fontFamily="@font/prompt_medium"
                android:text="graph"/>

    </LinearLayout>
</LinearLayout>