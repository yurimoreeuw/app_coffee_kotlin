<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <ImageView
            android:id="@+id/coffeeImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@drawable/coffee_placeholder"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/producerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/coffeeImage"
            android:text="nome do cafe"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/processTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/coffeeImage"
            android:text="processo"
            android:layout_below="@id/producerNameTextView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

</RelativeLayout>